<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextViewMerka"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/background_logoMerka"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="@style/textAppearance_Merka"
        android:textSize="@dimen/Merka"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/placeholderEmail"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/placeholderSenha"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonEntrar"
        style="@style/BtnCadastrar"
        android:layout_width="289dp"
        android:layout_height="54dp"
        android:background="@drawable/background_Btncadastrar"
        android:text="@string/TextBtnEntrar"
        android:textAppearance="@style/textAppearance_TextBtn"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_weight="2"/>

    <View
        android:id="@+id/LinhaHorizontal"
        android:layout_width="289dp"
        android:layout_height="2dp"
        android:background="@color/design_default_color_on_secondary"
        android:focusable="false"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textViewJaPossuiConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextViewNaopossuiConta"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/TextBtn"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextViewEsqueciSenha"
        android:textColor="#D33333"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout >